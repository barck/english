$sm = 576px
$md = 768px
$lg = 992px
$xlg = 1200px

.navbar
  background: #2f241b!important

.block-hero
  background url("/img/hero.jpg") no-repeat center left
  .full
    display: none
    @media(max-width $lg)
      display: block
      padding-top: 20px
    @media(max-width $sm)
      padding: 0
      margin-bottom: 20px
    h1
      text-align: center
      @media(max-width $sm)
        font-size: 2em
        padding: 0
        margin: 0
  .flex
    display: flex
    justify-content: space-between
    .about
      width: 50%
      @media(max-width $sm)
        width: 100%
      h1
        margin-top: 80px
        margin-bottom: 80px
        @media(max-width $lg)
          display: none
      p
        @media(max-width $lg)
          padding-top: 40px
          padding-left: 20px
        @media(max-width $sm)
          padding: 0
        @media(max-width $md)
          padding: 0
          font-size 12px
  .hero-item
    width: 50%
    position: relative
    min-height 500px
    @media(max-width $lg)
      min-height 350px
    @media(max-width $md)
      min-height 220px
    @media(max-width $sm)
      display: none
    img
      position: absolute
      max-width 100%
      bottom: 0

